{
  "name": "devpulse",
  "version": "1.0.0",
  "description": "A powerful terminal-based focus timer with enhanced notifications",
  "author": "Your Name",
  "license": "MIT",
  "keywords": ["timer", "focus", "productivity", "cli", "terminal"],
  "module": "index.ts",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --target=bun --outdir=dist",
    "dev": "bun run src/index.ts",
    "focus": "bun run src/index.ts focus",
    "focus25": "bun run src/index.ts focus 25",
    "focus45": "bun run src/index.ts focus 45", 
    "focus1": "bun run src/index.ts focus 1",
    "break": "bun run src/index.ts break",
    "break5": "bun run src/index.ts break 5",
    "devlog": "bun run src/index.ts log",
    "devreport": "bun run src/index.ts report",
    "log": "bun run src/index.ts log",
    "logs": "bun run src/index.ts log",
    "report": "bun run src/index.ts report",
    "stats": "bun run src/index.ts report",
    "test-sound": "bun run alerts/play-sound.sh",
    "test-timer": "bun run src/index.ts focus 0.1",
    "test": "bun run test-notifications.ts",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "node-notifier": "^10.0.1",
    "ora": "^8.2.0"    
